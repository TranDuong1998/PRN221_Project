@page
@model PRN211_Project.Pages.Slots.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class=" text-white">TimeSlot Management</h1>

<div class="container bg-light text-black rounded">
    <div class="container py-2">
        <h3 class="mt-3">Are you sure you want to delete this?</h3>
        <div>
            <h4>TimeSlot</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Start Time
                </dt>
                <dd class="col-sm-10">
                    @Model.TimeSlot.StartTime?.ToString("hh\\:mm")
                </dd>
                <dt class="col-sm-2">
                    End Time
                </dt>
                <dd class="col-sm-10">
                    @Model.TimeSlot.EndTime?.ToString("hh\\:mm")
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TimeSlot.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TimeSlot.Description)
                </dd>
                <form method="post" class="mb-2">
                    <input type="hidden" asp-for="TimeSlot.TimeSlotId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-page="./Index"><i class="fas fa-arrow-left"></i> Back to List</a>
                </form>
            </dl>
        </div>
    </div>
</div>
