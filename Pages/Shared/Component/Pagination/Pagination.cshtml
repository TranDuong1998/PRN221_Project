@{
}

@model PRN211_Project.Pages.Shared.ViewComponents.PaginationViewModel

@if (Model.TotalPage > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="@Model.PageUrl" asp-route-pageIndex="@(Model.CurrentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true"><i class="fas fa-arrow-left"></i></span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPage; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-page="@Model.PageUrl" asp-route-pageIndex="@i">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="@Model.PageUrl" asp-route-pageIndex="@(Model.CurrentPage + 1)" aria-label="Next">
                        <span aria-hidden="true"><i class="fas fa-arrow-right"></i></span>
                    </a>
                </li>
            }
        </ul>
    </nav>
}