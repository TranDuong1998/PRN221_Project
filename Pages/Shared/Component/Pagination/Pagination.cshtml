@{
}

@model PRN211_Project.Pages.Shared.ViewComponents.PaginationViewModel

@if (Model.TotalPage > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="@Model.PageUrl" asp-route-pageIndex="1"
                       asp-route-filter="@Model.Filter" asp-route-search="@Model.Search"
                       asp-route-viewDate="@Model.ViewDate"
                       asp-route-search="@Model.Search"
                       aria-label="Previous">
                        <span aria-hidden="true">First</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-page="@Model.PageUrl" asp-route-pageIndex="@(Model.CurrentPage - 1)"
                       asp-route-filter="@Model.Filter" asp-route-search="@Model.Search"
                       asp-route-viewDate="@Model.ViewDate" aria-label="Previous">
                        <span aria-hidden="true"><i class="fas fa-arrow-left"></i></span>
                    </a>
                </li>
            }

            @for (int i = Model.CurrentPage - Model.DisplayRange; i <= Model.CurrentPage + Model.DisplayRange; i++)
            {
                if (i >= 1 && i <= Model.TotalPage)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="@Model.PageUrl" asp-route-pageIndex="@i"
                           asp-route-filter="@Model.Filter" asp-route-search="@Model.Search" asp-route-viewDate="@Model.ViewDate">@i</a>
                    </li>
                }
            }

            @if (Model.CurrentPage < Model.TotalPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="@Model.PageUrl" asp-route-pageIndex="@(Model.CurrentPage + 1)"
                       asp-route-filter="@Model.Filter" asp-route-search="@Model.Search"
                       asp-route-viewDate="@Model.ViewDate" aria-label="Next">
                        <span aria-hidden="true"><i class="fas fa-arrow-right"></i></span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-page="@Model.PageUrl" asp-route-pageIndex="@(Model.TotalPage)"
                       asp-route-filter="@Model.Filter" asp-route-search="@Model.Search"
                       asp-route-viewDate="@Model.ViewDate"
                       asp-route-search="@Model.Search"
                       aria-label="Previous">
                        <span aria-hidden="true">Last</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
}