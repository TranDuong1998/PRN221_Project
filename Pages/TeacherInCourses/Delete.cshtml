@page
@model PRN211_Project.Pages.TeacherInCourses.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-white mt-2">Delete</h1>
<div class="container bg-light text-black rounded">
    <div class="container py-2">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>TeacherDetail</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TeacherDetail.Course)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TeacherDetail.Course.CourseId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TeacherDetail.Teacher)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TeacherDetail.Teacher.TeacherId)
                </dd>
            </dl>
            <form method="post">
                <input type="hidden" asp-for="TeacherDetail.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./Index"><i class="fas fa-arrow-left"></i> Back to List</a>
            </form>
        </div>
    </div>
</div>
