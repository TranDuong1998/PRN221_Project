@page
@model PRN211_Project.Pages.TeacherInClass.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-white mt-2">Create</h1>
<div class="container bg-light text-black rounded">
    <div class="container py-2">
        <h4>Classroom instructor</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-2">
                        <label asp-for="TeacherClass.TeacherId" class="control-label">Teacher</label>
                        <select asp-for="TeacherClass.TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="TeacherClass.ClassId" class="control-label"></label>
                        <select asp-for="TeacherClass.ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                    </div>
                    <div class="form-group mb-2">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="mb-2">
                <a asp-page="Index"><i class="fas fa-arrow-left"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
