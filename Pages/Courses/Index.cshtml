@page
@model PRN211_Project.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class=" text-white">Course Management</h1>

<div class="mb-3 row d-flex">
    <div class="col-lg-2">
        <a asp-page="Create"><button class="btn btn-primary" type="button">New Course</button></a>
    </div>
    <div class="col-lg-3">
        <a asp-page="/TeacherInCourses/Create"><button class="btn btn-primary" type="button">New Subject lecturer</button></a>
    </div>
</div>

<div class="bg-light text-black rounded mb-3">
    <div class="table-wrapper">
        <table class="table table-fixed overflow-auto" id="scroll-table">
            <thead>
                <tr>
                    <th scope="col" class="text-center">
                        .No
                    </th>
                    <th scope="col">
                        Course Name
                    </th>
                    <th scope="col" class="">
                        Course Code
                    </th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Course)
                {
                    <tr>
                        <td scope="row" class="text-center">
                            @(Model.Course.IndexOf(item) + 1)
                        </td>
                        <td scope="row" class="col-7 text-break">
                            @Html.DisplayFor(modelItem => item.CourseName)
                        </td>
                        <td scope="row" class="col-2">
                            @Html.DisplayFor(modelItem => item.CourseCode)
                        </td>
                        <td scope="row" class="text-center col-2">
                            <a asp-page="./Edit" asp-route-id="@item.CourseId" class="text-primary"><i class="fas fa-edit"></i></a> |
                            <a asp-page="./Details" asp-route-id="@item.CourseId" class="text-primary"><i class="fas fa-info-circle"></i></a> |
                            <a asp-page="/TeacherInCourses/Details" asp-route-subId="@item.CourseId" class="text-primary"><i class="far fa-clipboard"></i></a> |
                            <a asp-page="./Delete" asp-route-id="@item.CourseId" class="text-danger"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <vc:pagin page-url="./index" total-page="@Model.TotalPages" display-range="5"
              current-page="@Model.CurrentPage" page-index="1" filter="" search="@Model.Search" view-date=""></vc:pagin>
</div>