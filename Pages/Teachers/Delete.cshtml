@page
@model PRN211_Project.Pages.Teachers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class=" text-white">Teacher Management</h1>
<div class="container bg-light text-black rounded">
    <div class="container py-2">
        <h3 class="mt-3">Are you sure you want to delete this?</h3>
        <div>
            <h4>Teacher</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Teachers Code
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Teacher.TeachersCode)
                </dd>
                <dt class="col-sm-2">
                    Full Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Teacher.FullName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Teacher.Address)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Teacher.Address)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Teacher.Phone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Teacher.Phone)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Teacher.Dob)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Teacher.Dob)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Teacher.Account)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Teacher.Account.AccountId)
                </dd>
                <form method="post" class="mb-2">
                    <input type="hidden" asp-for="Teacher.TeacherId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-page="./Index"><i class="fas fa-arrow-left"></i> Back to List</a>
                </form>
            </dl>
        </div>
    </div>
</div>
