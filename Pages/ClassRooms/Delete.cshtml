@page
@model PRN211_Project.Pages.ClassRooms.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<body onload="@((Model.CheckAccount) ? "" : $"showNotFoundModal('{Model.Message}')")">

    <h1 class=" text-white">Classroom Management</h1>

    <div class="container bg-light text-black rounded">
        <div class="container py-2">
            <h3 class="mt-3">Are you sure you want to delete this?</h3>
            <div>
                <h4>Class Room</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ClassRoom.ClassName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ClassRoom.ClassName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ClassRoom.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ClassRoom.Description)
                    </dd>
                </dl>

                <form method="post" class="mb-2">
                    <input type="hidden" asp-for="ClassRoom.ClassId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-page="./Index"><i class="fas fa-arrow-left"></i> Back to List</a>
                </form>
            </div>
        </div>
    </div>
</body>