@page
@model PRN211_Project.Pages.ClassRooms.EditModel

@{
    ViewData["Title"] = "Edit";
}
<body onload="@((Model.CheckAccount) ? "" : $"showNotFoundModal('{Model.Message}')")">

    <h1 class=" text-white">Classroom Management</h1>

    <div class="container bg-light text-black rounded">
        <div class="container py-2">
            <h4 class="mt-3">Update ClassRoom</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ClassRoom.ClassId" />
                        <div class="form-group mb-2">
                            <label asp-for="ClassRoom.ClassName" class="control-label"></label>
                            <input asp-for="ClassRoom.ClassName" class="form-control" />
                            <span asp-validation-for="ClassRoom.ClassName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ClassRoom.Description" class="control-label"></label>
                            <input asp-for="ClassRoom.Description" class="form-control" />
                            <span asp-validation-for="ClassRoom.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
                <div class="mb-2">
                    <a asp-page="./Index"><i class="fas fa-arrow-left"></i> Back to List</a>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
