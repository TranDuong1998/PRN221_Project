@page
@model PRN211_Project.Pages.Accounts.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<h1 class="text-white">Account Management</h1>

<div class="container bg-light text-black rounded">

    <div class ="container py-2">
        <h4 class="mt-3">Account Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                User Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Password)
            </dt>
            <dd class="col-sm-10">
                <span id="passwordDisplay">
                    @Html.DisplayFor(model => model.Account.Password)
                </span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Role)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Role)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Active)
            </dt>
            <dd class="col-sm-10">
                <div>
                    <input disable type="radio" class="btn-check" name="@Model.Account.AccountId" id="@Model.Account.AccountId" autocomplete="off"
                           checked="@Model.Account.Active">
                    <label class="btn @((Model.Account.Active == true) ? "btn-outline-success" : "btn-danger")"
                           for="@Model.Account.AccountId"></label>
                </div>
            </dd>
            <div class="mb-2">
                <a asp-page="./Edit" class="mb-3" asp-route-id="@Model.Account?.AccountId">Edit</a> |
                <a asp-page="./Index" class="mb-3"><i class="fas fa-arrow-left"></i> Back to List</a>
            </div>
        </dl>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var passwordDisplay = document.getElementById("passwordDisplay");
            if (passwordDisplay) {
                var passwordLength = "@Model.Account.Password.Length";
                passwordDisplay.textContent = "*".repeat(passwordLength);
            }
        });
    </script>
</div>