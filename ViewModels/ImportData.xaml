                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label>File:</Label>
                    <TextBox
                         x:Name="txtFileName"
                         Height="25" Width="450"
                         Margin="10,0,0,0">
                    </TextBox>
                    <Button x:Name="btnChooseFile"
                        Content="Choose File"
                        Width="100"
                        Margin="10,0,0,0"
                        Foreground="Black"
                        Style="{StaticResource btnHover}"
                        Click="btnChooseFile_Click"/>
                </StackPanel>
                <Button x:Name="btnImport"
                        Content="Import"
                        Width="100"
                        Height="30"
                        Margin="10,0,0,0"
                        Background="Blue"
                        FontWeight="Bold"
                        Style="{StaticResource btnHover}"
